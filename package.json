{
  "name": "refresh-dc.org",
  "private": true,
  "scripts": {
    "build": "bundle exec jekyll build --config jekyll.yml --profile --trace",
    "pretest": "npm run build",
    "start": "bundle exec jekyll serve --config jekyll.yml --trace",
    "test": "npx npm-run-all --print-label test:*",
    "test:html": "bundle exec htmlproofer ./public --assume-extension --disable-external --only-4xx",
    "test:sass": "npx stylelint --color **/*.scss"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.17.2"
  }
}
